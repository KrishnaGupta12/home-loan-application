	}
	
	public void calculateEmi() {
		roi=10.25;
		roiPerMonth=roi/(12*100);
		tenure=5;
		emiAmount= (100000*roiPerMonth*Math.pow(1+roiPerMonth,time))/(Math.pow(1+roiPerMonth,time)-1);
		
	}
	
	
}
